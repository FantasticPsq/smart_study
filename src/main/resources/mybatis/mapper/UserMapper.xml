<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mongo.smart_study.mapper.UserMapper">

    <select id="getUsers" resultType="MyUser">
        select * from user_info
    </select>

    <select id="getUserById" resultType="MyUser">
        select * from user_info where id = #{id}
    </select>

    <select id="findUserByName" resultType="MyUser">
        select * from user_info where username = #{username}
    </select>

    <insert id="addUser" parameterType="MyUser">
        insert into user_info (username,password,email,phone_number,join_time,roles) values (#{username},#{password},#{email},#{phoneNumber},#{joinTime},#{roles})
    </insert>


    <delete id="deleteUserById" parameterType="int">
        delete from user_info where id = #{id}
    </delete>

    <delete id="deleteUser" parameterType="MyUser">
        delete from user_info where id=#{id}
    </delete>

</mapper>