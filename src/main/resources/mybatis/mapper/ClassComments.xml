<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mongo.smart_study.mapper.ClassCommentsMapper">
    <select id="getClassCommentsById" resultType="ClassComments">
        select * from class_comments where class_id=#{id}
    </select>
    <select id="getCommentById" resultType="ClassComments">
        select * from class_comments where id=#{id}
    </select>
    <insert id="doComments" parameterType="ClassComments">
        insert into class_comments (class_id, user_id, content) values (#{classId},#{userId},#{content})
    </insert>
</mapper>