<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mongo.smart_study.mapper.PostCommentsMapper">

    <insert id="addPostComment" parameterType="PostComments">
        insert into post_comments (post_id, user_id, content, join_time) VALUES (#{postId},#{userId},#{content},#{joinTime})
    </insert>

    <select id="findAllPostCommentsById" resultType="PostComments">
        select *from post_comments where post_id=#{id}
    </select>



</mapper>
